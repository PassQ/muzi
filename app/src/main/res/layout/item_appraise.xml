<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@xml/shape2">

    <TextView
        android:text="用户ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="10dp"
        android:id="@+id/appraise_name"
        android:textColor="#000"
        android:textSize="16sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="评价评价评价评价评价评价评价评价评价评价评价评价评价评价评价评价"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/appraise_introduce"
        android:layout_alignRight="@+id/appraise_date"
        android:layout_below="@+id/appraise_name"
        android:textSize="14sp"
        android:layout_alignLeft="@+id/appraise_name"
        android:layout_marginTop="10dp" />

    <TextView
        android:text="评价日期"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/appraise_date"
        android:layout_below="@+id/imageScrollview"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <com.ocwvar.muzi.Views.RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:starCount="5"
        app:starEmpty="@drawable/ic_star_off"
        app:starFill="@drawable/ic_star_open"
        app:starHalf="@drawable/ic_star_half"
        app:starImageSize="16dp"
        app:starPadding="1dp"
        app:starStep="0"
        app:stepSize="Half"
        app:clickable="false"
        android:layout_alignTop="@+id/appraise_name"

        android:layout_centerHorizontal="true"></com.ocwvar.muzi.Views.RatingBar>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appraise_introduce"
        android:layout_marginTop="5dp"
        android:id="@+id/imageScrollview">

        <LinearLayout
            android:id="@+id/imageLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            </LinearLayout>
    </HorizontalScrollView>


</RelativeLayout>