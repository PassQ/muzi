<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_business"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.ocwvar.muzi.Activities.BusinessActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/business_toolbar"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <ScrollView
        android:layout_below="@+id/business_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:text="商家名称"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/business_name"
        android:textSize="22sp"
        android:textColor="#000"
        android:layout_below="@+id/recycle_image"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_alignBottom="@+id/textView66"
        android:layout_toRightOf="@+id/textView66"
        android:layout_toEndOf="@+id/textView66"
        android:id="@+id/business_tel" />

    <TextView
        android:text="联系方式："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView66"
        android:textSize="16sp"
        android:layout_below="@+id/business_address"
        android:layout_alignLeft="@+id/business_address"
        android:layout_alignStart="@+id/business_address"
        android:layout_marginTop="10dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="开店时间："
        android:layout_below="@+id/textView66"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@id/textView66"
        android:id="@+id/business_openTime"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_below="@+id/business_openTime"
            android:layout_marginTop="10dp"
            android:layout_alignLeft="@id/textView66"
            android:id="@+id/business_offdays"/>

    <TextView

        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="11dp"
        android:background="@color/gray"
        android:id="@+id/textView68"
        android:layout_below="@+id/business_offdays"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView68"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="7dp"
        android:weightSum="1">
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/business_linear1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/shape_cart_red"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone"
            android:padding="8dp">

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预设回复1"
                android:textColor="#fb7e00"
                android:textSize="14sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/business_linear2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/shape_cart_red"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone"
            android:padding="8dp">

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预设回复1"
                android:textColor="#fb7e00"
                android:textSize="14sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/business_linear3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/shape_cart_red"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone"
            android:padding="8dp">
            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预设回复3"
                android:textColor="#fb7e00"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/business_linear4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/shape_cart_red"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/tv4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="预设回复1"
                    android:textColor="#fb7e00"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/business_linear5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/shape_cart_gray"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/tv5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="预设回复1"
                    android:textColor="#666666"
                    android:textSize="14sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/business_linear6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"

                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/tv6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="详细回复"
                    android:textColor="#666666"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="15dp"
            android:layout_gravity="bottom"
            android:layout_weight="1">

            <Button
                android:layout_marginTop="35dp"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="我要预约"
                android:layout_gravity="bottom"
                android:textSize="16sp"
                android:textColor="#fff"
                android:background="@drawable/btn_order_bg_selector"
                android:id="@+id/business_btn_order" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:text="详细地址"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/business_address"
        android:textColor="#000"
        android:textSize="16dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/RatingBar"
        android:layout_alignLeft="@+id/RatingBar"
        android:layout_alignStart="@+id/RatingBar" />

    <TextView
        android:text="评分 4.0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/business_score"
        android:textSize="16sp"
        android:textColor="#fb7e00"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="8dp"
        android:layout_alignBottom="@+id/RatingBar"
        android:layout_toRightOf="@+id/RatingBar"
        android:layout_toEndOf="@+id/RatingBar" />

    <com.ocwvar.muzi.Views.RatingBar
        android:id="@+id/RatingBar"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        app:starCount="5"
        app:starEmpty="@drawable/ic_star_off"
        app:starFill="@drawable/ic_star_open"
        app:starHalf="@drawable/ic_star_half"
        app:starImageSize="20dp"
        app:starPadding="2dp"
        app:starStep="1.5"
        app:clickable="false"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/business_name"
        android:layout_alignLeft="@+id/business_name"
        android:layout_alignStart="@+id/business_name"></com.ocwvar.muzi.Views.RatingBar>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recycle_image"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    </RelativeLayout>
    </ScrollView>
</RelativeLayout>
