<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:layout_marginTop="8dp"
    android:background="@xml/shape2">

    <ImageView
        android:id="@+id/item_bulletin_image"
        android:layout_width="110dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:scaleType="fitXY"
        />

    <TextView
        android:id="@+id/item_bulletin_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/item_bulletin_image"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:layout_toEndOf="@+id/item_bulletin_image"
        android:layout_toRightOf="@+id/item_bulletin_image"
        android:singleLine="true"
        android:text="商家名"
        android:textColor="#181818"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/item_bulletin_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/item_bulletin_title"
        android:layout_alignStart="@+id/item_bulletin_title"
        android:layout_centerVertical="true"
        android:maxLines="2"
        android:text="商家介绍"
        android:textSize="12sp"/>

    <TextView
        android:text="综合评分：4.0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="28dp"
        android:layout_marginEnd="28dp"
        android:textSize="20sp"
        android:id="@+id/item_bulletin_time"
        android:layout_alignTop="@+id/item_bulletin_title"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="@android:color/holo_orange_dark" />

    <TextView
        android:id="@+id/item_bulletin_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="店铺状态"
        android:layout_alignBottom="@+id/item_bulletin_image"
        android:layout_alignLeft="@+id/item_bulletin_message"
        android:layout_alignStart="@+id/item_bulletin_message" />
</RelativeLayout>