<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_review"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.ocwvar.muzi.Activities.ReviewActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/review_toolbar" />

    <LinearLayout

        android:id="@+id/ll1"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:layout_marginLeft="34dp"

        android:layout_marginTop="25dp"

        android:background="@drawable/shape_cart_red"

        android:gravity="center"
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_marginStart="34dp"
        android:layout_below="@+id/review_toolbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView

            android:id="@+id/tv1"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:text="预设回复1 评价数"

            android:textColor="#db2725"

            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout

        android:id="@+id/review_linear2"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:layout_marginLeft="54dp"

        android:background="@drawable/shape_cart_red"

        android:gravity="center"
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_alignTop="@+id/ll1"
        android:layout_toRightOf="@+id/ll1"
        android:layout_toEndOf="@+id/ll1"
        android:layout_marginStart="54dp">

        <TextView

            android:id="@+id/tv2"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:text="预设评价2 评价数"

            android:textColor="#db2725"

            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout

        android:id="@+id/review_linear3"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:layout_marginTop="23dp"

        android:background="@drawable/shape_cart_red"

        android:gravity="center"
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_below="@+id/ll1"
        android:layout_alignLeft="@+id/ll1"
        android:layout_alignStart="@+id/ll1">

        <TextView

            android:id="@+id/tv3"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:text="预设评价3 评价数"

            android:textColor="#db2725"

            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout

        android:id="@+id/review_linear4"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:background="@drawable/shape_cart_red"

        android:gravity="center"
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_alignTop="@+id/review_linear3"
        android:layout_alignLeft="@+id/review_linear2"
        android:layout_alignStart="@+id/review_linear2">

        <TextView

            android:id="@+id/tv4"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:text="预设评价4 评价数"

            android:textColor="#db2725"

            android:textSize="14sp" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/review_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/review_linear3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:layout_marginTop="63dp" />

</RelativeLayout>
