<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#efeff1"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="132dp"
        android:layout_gravity="center_horizontal"
        android:background="#fff"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_neirong_02"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="18dp"
        android:background="@xml/shape">

        <EditText
            android:id="@+id/editText_zc2_getCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="3dp"
            android:layout_toLeftOf="@+id/button_zc2_sendCode"
            android:layout_toStartOf="@+id/button_zc2_sendCode"
            android:layout_weight="0.20"
            android:background="#00000000"
            android:hint="@string/sendSMSHit"
            android:inputType="number"
            android:maxLength="4"
            android:phoneNumber="true"
            android:singleLine="true"
            android:textColorHint="#cccccc"/>

        <Button
            android:id="@+id/button_zc2_sendCode"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="#fd7043"
            android:text="@string/sendSMSCode"
            android:textColor="#fff"/>

    </RelativeLayout>

    <Button
        android:id="@+id/button_zc2_checkCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/send"
        android:text="@string/checkCode"
        android:textColor="#ffffff"/>

</LinearLayout>
