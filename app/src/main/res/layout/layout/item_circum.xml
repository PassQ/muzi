<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:layout_marginTop="8dp"
    android:background="@xml/shape2">

    <ImageView
        android:id="@+id/item_circum_image"
        android:layout_width="110dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:scaleType="fitXY"
        />

    <TextView
        android:id="@+id/item_circum_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/item_circum_image"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:layout_toEndOf="@+id/item_circum_image"
        android:layout_toRightOf="@+id/item_circum_image"
        android:singleLine="true"
        android:text="New Text"
        android:textColor="#181818"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/item_circum_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/item_circum_title"
        android:layout_alignStart="@+id/item_circum_title"
        android:layout_centerVertical="true"
        android:maxLines="2"
        android:text="服务详细介绍"
        android:textSize="12sp"/>

    <TextView
        android:text="信息发布时间"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="28dp"
        android:layout_marginEnd="28dp"
        android:id="@+id/item_circum_time"
        android:layout_alignTop="@+id/item_circum_title"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/item_circum_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="服务联系方式"
        android:layout_alignBottom="@+id/item_circum_image"
        android:layout_alignLeft="@+id/item_circum_message"
        android:layout_alignStart="@+id/item_circum_message" />
</RelativeLayout>