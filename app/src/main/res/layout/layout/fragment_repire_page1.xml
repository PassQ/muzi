<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#efeff1"
              android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:background="#fff"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:text="你要报修的小区名字为:"/>

                <LinearLayout
                    android:id="@+id/view_repire1_communityList"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:layout_marginRight="14dp"
                    android:background="@xml/shape2"
                    android:gravity="center_vertical|right"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView_repire1_community_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="名字"/>

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:src="@drawable/down_arrow"/>
                </LinearLayout>
            </LinearLayout>

            <HorizontalScrollView
                android:id="@+id/horizontalScrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp">

                    <LinearLayout
                        android:id="@+id/view_repire1_apartmentList"
                        android:layout_width="114dp"
                        android:layout_height="38dp"
                        android:layout_marginLeft="18dp"
                        android:background="@xml/shape2"
                        android:gravity="center|right"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView_repire1_apartment_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="栋数"/>

                        <ImageView
                            android:id="@+id/imageView9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:src="@drawable/down_arrow"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/view_repire1_unitList"
                        android:layout_width="114dp"
                        android:layout_height="38dp"
                        android:layout_marginLeft="3dp"
                        android:background="@xml/shape2"
                        android:gravity="center|right"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView_repire1_unit_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="单元"/>

                        <ImageView
                            android:id="@+id/imageView10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:src="@drawable/down_arrow"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/view_repire1_roomList"
                        android:layout_width="114dp"
                        android:layout_height="38dp"
                        android:layout_marginLeft="3dp"
                        android:background="@xml/shape2"
                        android:gravity="center|right"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView_repire1_room_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="房间号"/>

                        <ImageView
                            android:id="@+id/imageView11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:src="@drawable/down_arrow"/>
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:background="#fff"
                android:orientation="horizontal"
                android:paddingBottom="6dp"
                android:paddingTop="6dp">

                <LinearLayout
                    android:id="@+id/view_repire1_typeLists"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:background="@xml/shape2"
                    android:gravity="center|right"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView_repire1_type_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="请选择您要报修的类型"/>

                    <ImageView
                        android:id="@+id/imageView12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:src="@drawable/down_arrow"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/textView23"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="#fff"
                android:gravity="center_vertical"
                android:paddingBottom="14dp"
                android:paddingLeft="14dp"
                android:paddingTop="14dp"
                android:text="问题描述"
                android:textColor="#101010"
                android:textSize="16sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="5dp"
                android:background="#fff"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/editText_repire1_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#00000000"
                    android:gravity="top"
                    android:hint="请输入您要报修的具体问题"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#fff"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="wrap_content"
                    android:layout_height="46dp"
                    android:background="#fff"
                    android:gravity="center_vertical"
                    android:paddingBottom="14dp"
                    android:paddingLeft="14dp"
                    android:paddingTop="14dp"
                    android:text="预约时间"
                    android:textColor="#101010"
                    android:textSize="16sp"/>

                <ImageButton
                    android:id="@+id/imageButton_repire1_setTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:src="@drawable/ic_cal"/>

                <TextView
                    android:id="@+id/textView54"
                    android:layout_width="wrap_content"
                    android:layout_height="46dp"
                    android:background="#fff"
                    android:gravity="center_vertical"
                    android:paddingBottom="14dp"
                    android:paddingLeft="14dp"
                    android:paddingTop="14dp"
                    android:text="添加照片 "
                    android:textColor="#101010"
                    android:textSize="16sp"/>

                <ImageButton
                    android:id="@+id/imageButton_repire1_camera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:src="@drawable/ic_camera"/>

                <TextView
                    android:id="@+id/textView_repire1_piccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"/>

                <TextView
                    android:id="@+id/textView55"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/5"/>

                <ImageButton
                    android:id="@+id/imageButton_repire1_remove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:paddingLeft="10dp"
                    android:src="@drawable/ic_remove_pic"/>

            </LinearLayout>

            <TextView
                android:id="@+id/textView24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:gravity="center_vertical"
                android:paddingBottom="14dp"
                android:paddingLeft="14dp"
                android:paddingTop="14dp"
                android:text="您的联系信息"
                android:textColor="#101010"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/textView_repire1_context"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:gravity="center_vertical"
                android:paddingBottom="14dp"
                android:paddingLeft="14dp"
                android:paddingTop="14dp"
                android:textColor="#888888"
                android:textSize="16sp"/>

            <Button
                android:id="@+id/button_repire1_done"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:background="@drawable/d"
                android:singleLine="true"
                android:text="提交"
                android:textColor="#fff"
                android:textSize="16sp"/>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>