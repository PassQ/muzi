<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:text="商铺介绍商铺介绍商铺介绍商铺介绍商铺介绍商铺介绍商铺介绍商铺介绍商铺介绍"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/history_reply"
        android:layout_below="@+id/history_star1"
        android:layout_alignLeft="@+id/history_name"
        android:layout_alignStart="@+id/history_name"
        android:layout_toLeftOf="@+id/history_star3"
        android:layout_toStartOf="@+id/history_star3" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/btn_star_big_on"
        android:layout_alignTop="@+id/history_star2"
        android:layout_toRightOf="@+id/history_star2"
        android:layout_toEndOf="@+id/history_star2"
        android:id="@+id/history_star3" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/btn_star_big_on"
        android:layout_alignTop="@+id/history_star3"
        android:layout_toRightOf="@+id/history_star3"
        android:layout_toEndOf="@+id/history_star3"
        android:id="@+id/history_star4" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/btn_star_big_off"
        android:layout_alignTop="@+id/history_star4"
        android:layout_toRightOf="@+id/history_star4"
        android:layout_toEndOf="@+id/history_star4"
        android:id="@+id/history_star5" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/btn_star_big_on"
        android:id="@+id/history_star2"
        android:layout_alignTop="@+id/history_star1"
        android:layout_toRightOf="@+id/history_star1"
        android:layout_toEndOf="@+id/history_star1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/btn_star_big_on"
        android:id="@+id/history_star1"
        android:layout_alignTop="@+id/history_name"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="商铺名称"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="32dp"
        android:id="@+id/history_name"
        android:textColor="#000"
        android:textSize="24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="我要评价"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FF4500"
        android:id="@+id/history_date"
        android:layout_below="@+id/history_star4"
        android:layout_alignRight="@+id/history_star5"
        android:layout_alignEnd="@+id/history_star5"
        android:layout_marginTop="12dp" />


</RelativeLayout>