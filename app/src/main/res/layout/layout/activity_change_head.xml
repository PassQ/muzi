<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="245dp"
        android:background="#70b9f5"
        android:paddingBottom="@dimen/activity_vertical_margin">


        <Button
            android:id="@+id/button_changeHead_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView_changeHead_shower"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginTop="18dp"
            android:background="@android:color/transparent"
            android:text="点击更换头像"
            android:textColor="#fff"
            android:textSize="16dp"
            android:textStyle="bold"/>

        <com.ocwvar.muzi.Utils.CircleImageView
            android:id="@+id/imageView_changeHead_shower"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            app:civ_border_color="#92ccff"
            app:civ_border_overlay="true"
            app:civ_border_width="3dp"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            app:srcCompat="@drawable/ic_sign"
            android:background="#00000000"
            android:id="@+id/imageButton_sign" />

        <!--<Button-->
            <!--android:text="@string/string_sign"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_gravity="end"-->

            <!--android:background="@drawable/send_code"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:id="@+id/button_sign" />-->


    </FrameLayout>

    <TextView
        android:id="@+id/textView49"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="图像修正角度"
        android:textColor="#191919"
        android:textSize="15sp"/>

    <Spinner
        android:id="@+id/spinner_angle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

</LinearLayout>


