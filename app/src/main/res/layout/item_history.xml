<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@xml/shape2"
    >

    <TextView
        android:text="商铺介绍商铺介绍商铺介绍商铺介绍商铺介绍商铺介绍商铺介绍商铺介绍商铺介绍"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/appraise_introduce"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="10dp"
        android:textSize="14sp"
        android:maxLines="3"
        android:ellipsize="end"
        android:layout_below="@+id/history_date"
        android:layout_alignLeft="@+id/appraise_name"
        android:layout_alignStart="@+id/appraise_name"
        android:layout_alignRight="@+id/history_date"
        android:layout_alignEnd="@+id/history_date" />

    <com.ocwvar.muzi.Views.RatingBar
        android:id="@+id/ratingBar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:starCount="5"
        app:starEmpty="@drawable/ic_star_off"
        app:starFill="@drawable/ic_star_open"
        app:starHalf="@drawable/ic_star_half"
        app:starImageSize="16dp"
        app:starPadding="1dp"
        app:starStep="0"
        app:stepSize="Half"
        app:clickable="false"
        android:layout_alignTop="@+id/appraise_name"
        android:layout_centerHorizontal="true"></com.ocwvar.muzi.Views.RatingBar>

    <TextView
        android:text="商铺名称"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/appraise_name"
        android:textColor="#000"
        android:textSize="16sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp" />

    <TextView
        android:text="预约状态"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/orderStatus"
        android:layout_alignLeft="@+id/appraise_introduce"
        android:layout_alignStart="@+id/appraise_introduce"
        android:layout_below="@id/appraise_introduce"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:text="预约时间"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/orderStatus"
        android:layout_alignRight="@+id/appraise_introduce"
        android:layout_alignEnd="@+id/appraise_introduce"
        android:id="@+id/orderTime" />

    <TextView
        android:text="我要评价"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fb7e00"
        android:background="@xml/historybtnshape"
        android:id="@+id/history_date"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:layout_alignBottom="@+id/appraise_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>