<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:layout_marginTop="8dp"
    android:background="@xml/bulletinshape">

    <TextView
        android:id="@+id/item_bulletin_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/item_bulletin_title"
        android:layout_alignStart="@+id/item_bulletin_title"
        android:layout_centerVertical="true"
        android:maxLines="2"
        android:text="商家介绍"
        android:textColor="#666666"
        android:ellipsize="end"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/item_bulletin_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="店铺状态"
        android:layout_alignBottom="@+id/item_bulletin_image"
        android:layout_alignLeft="@+id/item_bulletin_message"
        android:layout_alignStart="@+id/item_bulletin_message" />

    <TextView
        android:text="综合评分:4.0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:id="@+id/item_bulletin_score"

        android:textColor="#fb7e00"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_alignTop="@+id/item_bulletin_title"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/item_bulletin_title"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:singleLine="true"
        android:text="商家名"
        android:textColor="#333333"
        android:textSize="14sp"
        android:textStyle="bold"
        android:maxEms="8"
        android:ellipsize="end"
        android:layout_alignTop="@+id/item_bulletin_image"
        android:layout_toRightOf="@+id/item_bulletin_image"
        android:layout_toEndOf="@+id/item_bulletin_image"
        android:layout_marginStart="10dp" />

    <ImageView
        android:id="@+id/item_bulletin_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="7dp"
        android:layout_marginStart="7dp" />
</RelativeLayout>