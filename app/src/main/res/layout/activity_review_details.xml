<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_review_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.ocwvar.muzi.Activities.ReviewDetailsActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/details_toolbar" />
    <ScrollView
        android:layout_below="@+id/details_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <TextView
        android:text="商家名称"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="29dp"
        android:textSize="24sp"
        android:textColor="#000"
        android:id="@+id/review_title"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ratingBar"
        android:layout_marginTop="10dp"

        android:id="@+id/replytabLayout">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/gone_layout1"
            >
            <LinearLayout
                android:id="@+id/details_linear1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/shape_cart_gray"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5dp"
                android:visibility="invisible">

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="预设回复1"
                    android:textColor="#666666"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/details_linear2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/shape_cart_gray"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="invisible"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="预设回复1"
                    android:textColor="#666666"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/details_linear3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/shape_cart_gray"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="invisible"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="预设回复1"
                    android:textColor="#666666"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/details_linear4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/shape_cart_gray"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="invisible"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tv4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="预设回复1"
                    android:textColor="#666666"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/gone_layout2"
            android:visibility="gone">
            <LinearLayout
                android:id="@+id/details_linear5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/shape_cart_gray"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="invisible"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tv5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="预设回复1"
                    android:textColor="#666666"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/details_linear6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/shape_cart_gray"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="invisible"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tv6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="预设回复1"
                    android:textColor="#666666"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/details_linear7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/shape_cart_gray"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="invisible"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tv7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="预设回复1"
                    android:textColor="#666666"
                    android:textSize="14sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/details_linear8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/shape_cart_gray"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="invisible"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tv8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="预设回复1"
                    android:textColor="#666666"
                    android:textSize="14sp" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_below="@+id/replytabLayout"
    android:layout_alignParentBottom="true">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:padding="3dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="start"
            android:background="@drawable/bg_edittext"
            android:id="@+id/review_content" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="已选择3张图片"
        android:visibility="invisible"
        android:id="@+id/text_photomassage"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">
            <Button
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:text="上传图片"
                android:textColor="#fff"
                android:background="@drawable/order_buttonbg"
                android:id="@+id/btn_photo" />

            <Button
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:text="确定评价"
                android:id="@+id/btn_apply"
                android:textColor="#fff"
                android:background="@drawable/order_buttonbg"/>
        </LinearLayout>
</LinearLayout>


    <TextView
        android:text="我的评价"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView75"
        android:layout_alignLeft="@+id/review_title"
        android:layout_alignStart="@+id/review_title"
        android:layout_marginTop="24dp"
        android:textSize="16dp"
        android:id="@+id/textView77" />

    <TextView
        android:text="综合评分"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView74"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/review_title"
        android:layout_alignLeft="@+id/review_title"
        android:layout_alignStart="@+id/review_title"
         />

    <TextView
        android:text="4.0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/review_score"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#fb7e00"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_alignTop="@+id/ratingBar2"
        android:layout_toRightOf="@+id/ratingBar2"
        android:layout_toEndOf="@+id/ratingBar2" />

    <TextView

        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:layout_marginTop="12dp"
        android:id="@+id/textView75"
        android:background="#e6e4e4df"
        android:layout_below="@+id/review_score"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <com.ocwvar.muzi.Views.RatingBar
        android:id="@+id/ratingBar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:starCount="5"
        app:starEmpty="@drawable/ic_star_off"
        app:starFill="@drawable/ic_star_open"
        app:starHalf="@drawable/ic_star_half"
        app:starImageSize="20dp"
        app:starPadding="3dp"
        app:starStep="1.5"
        app:stepSize="Half"
        app:clickable="false"
        android:layout_marginTop="6dp"
        android:layout_below="@+id/textView74"
        android:layout_alignLeft="@+id/textView74"
        android:layout_alignStart="@+id/textView74" />

    <TextView
        android:text="3.0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/review_getscore"
        android:layout_below="@+id/textView77"
        android:textSize="20sp"
        android:textColor="#fb7e00"
        android:layout_centerHorizontal="true" />

    <com.ocwvar.muzi.Views.RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:starCount="5"
        app:starEmpty="@drawable/ic_star_off"
        app:starFill="@drawable/ic_star_open"
        app:starHalf="@drawable/ic_star_half"
        app:starImageSize="35dp"
        app:starPadding="15dp"
        app:starStep="3"
        app:stepSize="Half"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/review_getscore"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
